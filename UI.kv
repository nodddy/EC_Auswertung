<Navigation>: #popup class
    size_hint: 0.18, 0.5
    pos_hint: {"right": 0.188, "top": 0.972}
    title: 'Navigation'
    background: ''
    title_color:0,0,0,1
    title_size: 22

    BoxLayout:
        size_hint: 0.6, 0.9
        pos_hint: {"center_x": 0.5, "top": 0.95}
        spacing: 10
        orientation: 'vertical'
        Button:
            font_size: 18
            text: 'ORR analysis'
            on_press: root.dismiss()
            on_press: root.manager.current= 'screen_orr'
        Button:
            font_size: 18
            text: 'CV analysis'
            on_press: root.dismiss()
            on_press: root.manager.current= 'screen_cv'
        Button:
            font_size: 18
            text: 'Capacitance Analysis'
            on_press: root.dismiss()
            on_press: root.manager.current= 'screen3'
        Button:
            font_size: 18
            text: 'Placeholder'
        Button:
            font_size: 18
            text: 'Settings'
            on_press: root.dismiss()
            on_press: root.manager.current= 'settings'

<ImageButton>:

<Manager>:
    id: screen_manager
    transition: NoTransition()

    screen_one: screen_one
    screen_two: screen_two
    screen_three: screen_three
    settings_screen: settings_screen

    ScreenZero:
        id: screen_zero
        name: 'screen0'
        manager: screen_manager

    ScreenOne:
        id: screen_one
        name: 'screen_orr'
        manager: screen_manager

    ScreenOne:
        id: screen_two
        name: 'screen_cv'
        manager: screen_manager

    ScreenThree:
        id: screen_three
        name: 'screen3'
        manager: screen_manager

    SettingsScreen:
        id: settings_screen
        name: 'settings'
        manager: screen_manager